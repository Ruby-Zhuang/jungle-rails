<section class="sessions-new">

  <header class="page-header">
    <h1>Login!</h1>
  </header>

  <%= form_tag '/login' do %>
    <div>E-mail: </div>
    <div><%= text_field_tag :email %></div>
    <br>
    <div>Password: </div>
    <div><%= password_field_tag :password %></div>
    <br>
    <div> <%= submit_tag "Submit" %></div>
  <% end %>

</section>